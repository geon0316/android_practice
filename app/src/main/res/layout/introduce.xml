            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2002년"
            android:fontFamily="@font/euljiro"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="250dp"
            android:textSize="30dp"/>
